<launch>
	<node name="Arm" pkg="tenderbot_arm" type="tenderbot_arm.py">
		<rosparam>
        </rosparam>
	</node>
    <node name="TB_dynamixel_manager" pkg="dynamixel_controllers" type="controller_manager.py" required="true" output="screen">
        <rosparam>
            namespace: TB_dynamixel_manager
            serial_ports:
                arm_port:
                    port_name: "/dev/ttyUSB0"
                    baud_rate: 1000000
                    min_motor_id: 1
                    max_motor_id: 8
                    update_rate: 10
        </rosparam>
    </node>
    
   	<rosparam file="$(find tenderbot_arm)/conf/joints.yaml" command="load"/>
    <node name="TB_dynamixel_controller_spawner" pkg="dynamixel_controllers" type="controller_spawner.py"
          args="--manager=TB_dynamixel_manager
                --port=arm_port
                --type=simple
				joint1
				joint2
				joint3
				joint4
				gripper"
          output="screen">  
    </node>
</launch>
